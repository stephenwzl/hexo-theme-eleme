$common
  margin: eleme-default-padding
  border-bottom: 1px color-99 dashed
  h2
    font-weight: lighter
  ul
    padding: 0
  li
    list-style-type: none
    display: inline-block
    padding: eleme-default-padding
    margin-left: 14px
  a
    color: color-66

.archive-categories
  @extend $common
  li:hover
    box-shadow: 0 0 5px color-99
    border-radius: 4px

.archive-tags
  @extend $common
  li
    background: eleme-blue
    border-radius: 18px
    height: 18px
    margin-top: 8px
    padding-left: 12px
    padding-right: 12px
  a
    color: white

.archive-archive
  @extend $common
  li:hover
    box-shadow: 0 0 5px
    border-radius: 4px

#category
  h1
    margin: eleme-default-padding
    font-weight: lighter
    padding-bottom: eleme-default-padding
    padding-top: eleme-default-padding
    border-bottom: 1px eleme-background solid

.category-item
  margin: eleme-default-padding
  margin-left: 16px
  padding-top: 8px
  padding-bottom: 8px
  border-bottom: 1px eleme-background dashed
  time
    color: color-99 !important
    margin-left: 12px
    //font-size: font-size-mini
  a
    color: color-33
    &:hover
      color: eleme-blue

