#post
  max-width: 95%
  margin: auto
  //margin-left: eleme-default-padding
  //margin-right: eleme-default-padding
  p
    line-height: 28px
    margin-top: 24px
  h2
    margin-top: 48px
  a
    color: eleme-blue !important
  img
    display: block
    margin: auto
    margin-top: 12px
    max-width: eleme-max-width
  li
    line-height: 28px
    margin-top: 12px

//文章标题居中
.post-title
  text-align: center
  font-weight: 400
  font-size: font-size-xlarge

.post-meta
  margin: 0 auto
  text-align: center
  font-size: font-size-normal
  //font-weight: lighter
  a
    &:hover
      color: eleme-blue
    &:active
      color: eleme-orange

pre
  background: eleme-background
  code
    line-height: 28px

code
  font-family: font-mono
  color: color-66
  background: eleme-background
  padding: 6px
  border-radius: 2px

.line
  color: color-99
  font-size: font-size-normal
  font-family: font-mono
  margin-left: 4px

.post-wrapper
  figure
    background: color-footer-background
    overflow: auto
    padding: eleme-default-padding
    border-radius: 4px
    figcaption
      color: white
    pre
      background: transparent