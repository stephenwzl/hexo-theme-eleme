#content-inner
  width: 100%

.recent-posts-hint
  color: color-99
  font-size: font-size-xlarge
  font-weight: lighter
  margin-left: 8px
  border-bottom: 1px eleme-background solid
  margin-right: 8px


#recent-posts .release
  font-size: font-size-mini
  color: color-99
  display: inline-block

#recent-posts .author
  display: inline-block
  font-size: font-size-mini
  color: color-99

.recent-posts-title
  font-size: font-size-xlarge
  color: color-66
  &:hover
    color: eleme-blue

.recent-post-item
  min-height: 60px
  margin: eleme-default-padding
  padding-left: eleme-default-padding
  border-bottom: 1px eleme-separator dashed

#pagination
  position: absolute
  bottom: 64px
  height: 44px
  width: 100%
  border-top: 1px eleme-background solid

.prev-post
  float: left
  margin-left: 8px
  margin-top: 12px
  color: eleme-blue

.next-post
  float: right
  margin-top: 12px
  margin-right: 8px
  color: eleme-blue

.page-number
  color: color-66
  width: 100%
  margin: 0 auto
  text-align: center
  padding-top: 12px